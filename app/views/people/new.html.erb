<%= simple_form_for @person do |f| %>
<%= f.input :name, :input_html => { :class => "input-xxlarge"} %>
<%= f.input :wechat_num, :input_html => { :class => "input-xxlarge"} %>
<%= f.input :phone, :input_html => { :class => "input-xxlarge"} %>
<%= f.input :qq, :input_html => { :class => "input-xxlarge"} %>
<%= f.input :email, :input_html => { :class => "input-xxlarge"} %>
<%= f.input :address, :input_html => { :class => "input-xxlarge"} %>
<%= f.file_field :picture, :input_html => { :class => "input-xxlarge"} %>

<div class="form-actions">
<%= f.submit "Submit", :disable_with => 'Submiting...', :class => "btn btn-primary" %>
</div>
<% end %>